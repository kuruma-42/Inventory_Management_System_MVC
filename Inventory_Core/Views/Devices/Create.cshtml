            <div class="form-group">
                <label asp-for="Code2" class="control-label">자재구분</label>
                <select asp-for="Code2" asp-items="@((List<SelectListItem>)ViewData["CodeList"])" class="form-control">
                    <option value="0">-- 미선택 --</option>
                </select>
                <span asp-validation-for="Code2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sub_id" class="control-label">Sub ID</label>
                <input asp-for="Sub_id" class="form-control" />
                <span asp-validation-for="Sub_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Use_yn" class="control-label">사용여부</label>
                <select asp-for="Use_yn" class="form-control">
                    <option value="Y">Y</option>
                    <option value="N">N</option>
                </select>
                <span asp-validation-for="Use_yn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Memo1" class="control-label">메모1</label>
                <input asp-for="Memo1" class="form-control" />
                <span asp-validation-for="Memo1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Memo2" class="control-label">메모2</label>
                <input asp-for="Memo2" class="form-control" />
                <span asp-validation-for="Memo2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
