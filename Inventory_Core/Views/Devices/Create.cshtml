@model Inventory_Core.Models.Devices

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Devices</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Serial_id" class="control-label">ID  ex) EF45-00001  (코드명-다섯자리숫자)</label>
                <input asp-for="Serial_id" class="form-control" />
