@model List<Inventory_Core.Models.WorkDiary>

@{
    ViewData["Title"] = "WorkDiary_Content";
}

<h1>WorkStatusContents</h1>
<style>
    #workstatus {
        border: dotted 1px; 
        padding: 15px;
        margin-bottom: 10px;
        border-color:darkgrey;
    }
</style>
<div class="row">
    <div class="col-md-4">
        <form asp-action="WorkDiary_Content" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @foreach (var item in ViewBag.WsSearch)
            {
                <div id="workstatus" >
                    <div class="form-group">
                        <label class="control-label">기준일자</label>
                        <input type="text" id="Reg_date" name="Reg_date" value="@item.Reg_date" class="form-control"  readonly />
                        <input type="hidden" id="Wd_id" name="Wd_id" value="@item.Wd_id" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">작성자</label>
                        <input type="text" id="User_id" name="User_id" value="@item.User_id" class="form-control" readonly />

                    </div>
                    <div class="form-group">
                        <label class="control-label">제목</label>
                        <input type="text" id="User_id" name="User_id" value="@item.Title" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label class="control-label">내용</label>
                        <textarea id="Contents" name="Contents" value="@item.Contents" class="form-control col-lg-12" rows="5" readonly>@item.Contents</textarea>
                    </div>
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Search</a>
</div>


