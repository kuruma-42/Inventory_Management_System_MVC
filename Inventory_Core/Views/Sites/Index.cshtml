@model IEnumerable<Inventory_Core.Models.Site>

@{
    ViewData["Title"] = "Index";
}

<h1>Site - @ViewData["Memco_nm"]</h1>

<p>
    <a asp-action="Create" asp-route-memco_cd="@ViewData["Memco_cd"]">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                현장명
            </th>
            <th>
                정렬번호
            </th>
            <th>
                사용여부
            </th>
            <th>
                시작일시
            </th>
            <th>
                종료일시
            </th>
            <th>
                메모1
            </th>
            <th>
                메모2
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Site_nm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sort_no)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Use_yn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start_dt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End_dt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Memo1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Memo2)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Site_cd">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Site_cd">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Site_cd">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
